<resources>
    <!-- Base application theme. -->

    <style name="MyThemeSplash" parent="MyBaseTheme">
        <item name="gitBackgroundColor">@color/white</item>
        <item name="gitPrimaryColor">@color/white</item>
        <item name="gitPrimaryDarkColor">@color/white</item>
        <item name="swipeIndicatorActive">@color/white</item>
        <item name="swipeIndicatorPassive">@color/white</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>


    <style name="MyThemeOrange" parent="MyBaseTheme">
        <item name="gitBackgroundColor">@color/yellow_900</item>
        <item name="gitPrimaryColor">@color/yellow_50</item>
        <item name="gitPrimaryDarkColor">@color/black</item>
        <item name="swipeIndicatorActive">@color/red</item>
        <item name="swipeIndicatorPassive">@color/orange</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyleBlackBlue</item>
        <item name="floatingActionButtonStyle">@style/myFloatingActionButtonStyleOrange</item>
    </style>

    <style name="MyThemeBlueGray" parent="MyBaseTheme">
        <item name="gitBackgroundColor">@color/blue_grey_900</item>
        <item name="gitPrimaryColor">@color/blue_grey_50</item>
        <item name="colorOnSurfaceVariant">@color/red</item>
        <item name="gitPrimaryDarkColor">@color/black</item>
        <item name="swipeIndicatorActive">@color/blue_grey_900</item>
        <item name="swipeIndicatorPassive">@color/blue_grey_600</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyleBlackBlue</item>
        <item name="floatingActionButtonStyle">@style/myFloatingActionButtonStyleOrange</item>
    </style>

    <style name="MyThemeIndigo" parent="MyBaseTheme">
        <item name="gitBackgroundColor">@color/indigo_900</item>
        <item name="gitPrimaryColor">@color/indigo_50</item>
        <item name="gitPrimaryDarkColor">@color/black</item>
        <item name="swipeIndicatorActive">@color/indigo_600</item>
        <item name="swipeIndicatorPassive">@color/indigo_900</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyleBlackBlue</item>
        <item name="floatingActionButtonStyle">@style/myFloatingActionButtonStyleOrange</item>
        <item name="useMaterialThemeColors">false</item>
    </style>

    <style name="MyThemeGreen" parent="MyBaseTheme">
        <item name="gitBackgroundColor">@color/green_900</item>
        <item name="gitPrimaryColor">@color/green_50</item>
        <item name="gitPrimaryDarkColor">@color/black</item>
        <item name="swipeIndicatorActive">@color/green_600</item>
        <item name="swipeIndicatorPassive">@color/green_900</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyleBlackGreen</item>
        <item name="floatingActionButtonStyle">@style/myFloatingActionButtonStyleGreen</item>
        <item name="useMaterialThemeColors">false</item>
    </style>

    <style name="MyBaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="gitBackgroundColor">@color/indigo_900</item>
        <item name="gitPrimaryColor">@color/indigo_50</item>
        <item name="gitPrimaryDarkColor">@color/black</item>
        <item name="swipeIndicatorActive">@color/indigo_600</item>
        <item name="swipeIndicatorPassive">@color/indigo_900</item>
        <item name="android:navigationBarColor">?attr/gitBackgroundColor</item>
        <item name="colorPrimary">?attr/gitBackgroundColor</item>
        <item name="colorOnPrimary">?attr/gitPrimaryColor</item>
        <item name="colorPrimaryContainer">?attr/gitBackgroundColor</item>
        <item name="colorOnPrimaryContainer">?attr/gitBackgroundColor</item>
        <item name="colorPrimaryInverse">?attr/gitBackgroundColor</item>
        <item name="colorSecondary">?attr/gitBackgroundColor</item>
        <item name="colorOnSecondary">?attr/gitPrimaryColor</item>
        <item name="colorOnSurfaceVariant">@color/red</item>
        <item name="colorSecondaryContainer">?attr/gitBackgroundColor</item>
        <item name="colorOnSecondaryContainer">?attr/gitBackgroundColor</item>
        <item name="colorTertiary">?attr/gitBackgroundColor</item>
        <item name="colorOnTertiary">?attr/gitPrimaryColor</item>
        <item name="colorTertiaryContainer">?attr/gitBackgroundColor</item>
        <item name="colorOnTertiaryContainer">?attr/gitBackgroundColor</item>
        <item name="android:statusBarColor">?attr/gitBackgroundColor</item>
        <item name="chipStyle">@style/myChipStyle</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyle</item>
        <item name="tabStyle">@style/myTabStyle</item>
        <item name="textAppearanceHeadline1">@style/MyTextAppearanceHeadline1</item>
        <item name="materialButtonStyle">@style/myMaterialButtonStyle</item>
        <item name="materialCardViewStyle">@style/myMaterialCardViewStyle</item>
        <item name="bottomNavigationStyle">@style/myBottomNavigationStyle</item>
    </style>

    <style name="Theme_Dialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="windowMinWidthMajor">90pt</item>
        <item name="windowMinWidthMinor">90pt</item>
    </style>
</resources>